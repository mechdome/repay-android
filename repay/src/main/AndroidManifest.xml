<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.repay.android"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name=".Application"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
		android:logo="@drawable/ic_actionbar_logo"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.repay.android.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.repay.android.debtwizard.AddDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="com.repay.android.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repay.android.MainActivity"
			/>
        </activity>

        <activity
            android:name="com.repay.android.debtwizard.RepayDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="com.repay.android.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repay.android.MainActivity" />
        </activity>

        <activity
            android:name="com.repay.android.debtwizard.EditDebtActivity"
            android:label="@string/title_activity_add_debt"
            android:parentActivityName="com.repay.android.MainActivity"
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repay.android.MainActivity" />
        </activity>

        <activity
            android:name=".overview.FriendActivity"
            android:label="@string/title_activity_frienddetails"
            android:parentActivityName="com.repay.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repay.android.MainActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings_activity_title"
            android:parentActivityName="com.repay.android.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.repay.android.MainActivity" />
        </activity>
    </application>

</manifest>
